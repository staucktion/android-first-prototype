<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (used for toolbars, buttons, etc.) -->
        <item name="colorPrimary">@color/black</item>
        <!-- Darker variant for status bar and toolbar backgrounds -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Text and icon color on primary surfaces (e.g., on the toolbar) -->
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Background color for your screens -->
        <item name="colorSurface">@android:color/white</item>
        <!-- Text and icon color on surfaces (e.g., on cards, backgrounds) -->
        <item name="colorOnSurface">@android:color/black</item>
        <!-- Secondary color (used for accents or components like Category Cards) -->
        <item name="colorSecondary">@color/categoryCard_background</item>
        <!-- Control highlight color, used for interactive states -->
        <item name="android:colorControlHighlight">@color/black</item>
    </style>

</resources>
